<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="hello"  class="com.vicky.AssisPackage.model.Hello"
		scope="singleton">
		<property name="name" value="Hello Vicky"/>	
    </bean>
    
    <bean id="world"  class="com.vicky.AssisPackage.model.World"
		scope="prototype">
		<property name="text" value="Summer Fun!"/>	
    </bean>
</beans>